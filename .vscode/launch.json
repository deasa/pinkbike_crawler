    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrape to DB",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=web",
                "-export=db",
                "-bikeType=enduro",
                "-numPages=5",
                "-headless=false",
                "-getDetails=true"
            ]
        },
        {
            "name": "populate details for existing listings",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=db",
                "-export=db",
                "-bikeType=enduro",
                "-getDetails=true"
            ]
        },
        {
            "name": "Scrape to CSV and Sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=web",
                "-export=csv,sheets",
                "-bikeType=xc",
                "-numPages=500"
            ]
        },
        {
            "name": "Scrape to CSV",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=web",
                "-export=csv",
                "-bikeType=enduro",
                "-numPages=3"
            ]
        },
        {
            "name": "Scrape to Sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=web",
                "-export=sheets",
                "-bikeType=enduro",
                "-numPages=500"
            ]
        },
        {
            "name": "File to CSV",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=file",
                "-export=csv",
                "-filePath=fullRunOfListings.csv",
                "-bikeType=enduro"
            ]
        },
        {
            "name": "File to CSV and Sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=file",
                "-export=csv,sheets",
                "-filePath=listingsCache.csv",
                "-bikeType=enduro"
            ]
        },
        {
            "name": "DB to CSV",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=db",
                "-export=csv",
                "-bikeType=enduro"
            ]
        },
        {
            "name": "Scrape Only (No Export)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-input=web",
                "-export=",
                "-bikeType=enduro",
                "-numPages=5",
                "-headless=false"
            ]
        }
    ]
}