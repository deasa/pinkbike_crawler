    "version": "0.2.0",
    "configurations": [
        {
            "name": "Write To File And Sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=true",
                "-exportToGoogleSheets=true",
                "-bikeType=xc",
                "-numPages=500"
            ]
        },
        {
            "name": "Write To File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=true",
                "-exportToGoogleSheets=false",
                "-bikeType=enduro",
                // "-numPages=3"
            ]
        },
        {
            "name": "Write To Sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=false",
                "-exportToGoogleSheets=true",
                "-bikeType=enduro",
                "-numPages=500"
            ]
        },
        {
            "name": "Read from file, write to file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=true",
                "-exportToGoogleSheets=false",
                "-filePath=fullRunOfListings.csv",
                "-fileMode=true",
                "-bikeType=enduro"
            ]
        },
        {
            "name": "Read from file, write to file, write to sheets",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=true",
                "-exportToGoogleSheets=true",
                "-filePath=listingsCache.csv",
                "-fileMode=false",
                "-bikeType=enduro"
            ]
        },
        {
            "name": "Only scrape, don't export",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "-exportToFile=false",
                "-exportToGoogleSheets=false",
                "-bikeType=enduro"
            ]
        }
    ]
}